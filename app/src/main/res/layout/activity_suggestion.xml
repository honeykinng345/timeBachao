<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuggestionActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_react01"
        android:padding="10dp"
        android:id="@+id/relavtive1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorwhite"
            android:text="Contact US "
            android:textSize="22sp"
            android:textStyle="bold"
            >

        </TextView>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_below="@+id/relavtive1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/tv1"
        android:text="Call to speak to our team"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:layout_width="130dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:text="CALL"
        android:drawableLeft="@drawable/ic_phone_gray"
        android:textSize="22dp"
        android:drawablePadding="10dp"
        android:padding="10dp"
        android:textAlignment="inherit"
        android:layout_marginTop="10dp"
        android:id="@+id/tv2"
        android:background="@drawable/round_outline"

        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"


            android:layout_marginTop="10dp"

            android:text="Pleae wrtie to us for any quries.."
            android:layout_height="wrap_content">

        </TextView>

        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_person_gray"
            android:padding="5dp"
            android:hint="name"
            android:drawablePadding="7dp"
            android:background="@drawable/shape_rect02"
            android:inputType="text"
         >

        </EditText>
        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_phone_gray"
            android:padding="5dp"
            android:hint="phone "
            android:drawablePadding="7dp"
            android:background="@drawable/shape_rect02"
            android:inputType="number"
            >

        </EditText>
        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic__subject"
            android:padding="5dp"
            android:hint="subject"
            android:drawablePadding="7dp"
            android:background="@drawable/shape_rect02"
            android:inputType="text"
            >

        </EditText>
        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_margin="5dp"
            android:drawableStart="@drawable/ic_mail_gray"
            android:padding="5dp"
            android:hint="message"
            android:drawablePadding="7dp"
            android:background="@drawable/shape_rect02"
            android:inputType="text"
            >

        </EditText>
        <Button
            android:id="@+id/continueBtn"
            android:layout_width="200dp"
            android:layout_height="40dp"
         android:layout_gravity="center"
            android:layout_margin="40dp"
            android:background="@drawable/rounded_button"
            android:text="Submit"
            android:textColor="#FFF"
           />
    </LinearLayout>

</RelativeLayout>